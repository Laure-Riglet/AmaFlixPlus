{% extends 'base.html.twig' %}

{% block title %}Production{% endblock %}

{% block body %}
    <h1>Production</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ production.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ production.title }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ production.type }}</td>
            </tr>
            <tr>
                <th>Release_date</th>
                <td>{{ production.releaseDate ? production.releaseDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ production.duration }}</td>
            </tr>
            <tr>
                <th>Tagline</th>
                <td>{{ production.tagline }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ production.synopsis }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ production.rating }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ production.poster }}</td>
            </tr>
            <tr>
                <th>Backdrop</th>
                <td>{{ production.backdrop }}</td>
            </tr>
            <tr>
                <th>Trailer</th>
                <td>{{ production.trailer }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_production_index') }}">back to list</a>

    <a href="{{ path('app_production_edit', {'id': production.id}) }}">edit</a>

    {{ include('production/_delete_form.html.twig') }}
{% endblock %}
